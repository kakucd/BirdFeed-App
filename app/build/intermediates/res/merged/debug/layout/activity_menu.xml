<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:drawablePadding="5dp"
    tools:context="com.httpstwitter.birdfeed.Menu">

    <TextView
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/welcome"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.018"
        android:id="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/message"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintVertical_bias="0.146"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/button_search"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:onClick="search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.343"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search"
        android:layout_width="73dp"
        android:layout_height="63dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_search_launcher"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintVertical_bias="0.324"
        android:onClick="search"/>

    <Button
        android:id="@+id/tweet"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Tweet"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.658"
        android:onClick="tweet"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/review"
        android:layout_width="63dp"
        android:layout_height="66dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_twitter_launcher"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintVertical_bias="0.678"
        android:onClick="tweet" />

    <Button
        android:id="@+id/Sign_In"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Sign In"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:onClick="signin"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/login"
        android:layout_width="74dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_user_launcher"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        android:onClick="signin"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/button_settings"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:onClick="settings"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.692" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settings"
        android:layout_width="62dp"
        android:layout_height="68dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_settings"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintVertical_bias="0.847"
        android:onClick="settings" />

</android.support.constraint.ConstraintLayout>

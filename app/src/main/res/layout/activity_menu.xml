<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:drawablePadding="5dp"
    tools:context="com.httpstwitter.birdfeed.Menu">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="286dp"
        android:layout_height="190dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="345dp"
        android:layout_height="50dp"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/welcome"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.22"
        android:id="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:text="@string/message"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintVertical_bias="0.292"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="265dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/button_search"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:onClick="search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintHorizontal_bias="0.506" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_search_launcher"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintVertical_bias="0.488"
        android:onClick="search" />

    <Button
        android:id="@+id/tweet"
        android:layout_width="266dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:text="@string/tweet"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.641"
        android:onClick="tweet" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/review"
        android:layout_width="57dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_twitter_launcher"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintVertical_bias="0.634"
        android:onClick="tweet" />

    <Button
        android:id="@+id/Sign_In"
        android:layout_width="267dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Sign In"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:onClick="signin"
        android:enabled="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.939"
        app:layout_constraintHorizontal_bias="0.504" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/login"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_user_launcher"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        android:onClick="signin"
        app:layout_constraintVertical_bias="0.945" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:text="@string/button_about"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="settings"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.634"
        app:layout_constraintHorizontal_bias="0.506" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/settings"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_gravity="bottom|left"
        android:clickable="true"
        android:scaleType="center"
        android:src="@mipmap/ic_settings"
        app:backgroundTint="@color/colorbkgd"
        app:fabSize="normal"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="top|right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintVertical_bias="0.785"
        android:onClick="settings" />

</android.support.constraint.ConstraintLayout>
